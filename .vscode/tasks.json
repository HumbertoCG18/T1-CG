{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (mingw32-make)",
      "type": "shell",
      "command": "C:/msys64/ucrt64/bin/mingw32-make.exe",
      "args": ["-f", "Makefile.mk"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "C:/msys64/ucrt64/bin/mingw32-make.exe",
      "args": ["-f", "Makefile.mk", "clean"],
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "${workspaceFolder}/BasicoOpenGL.exe",
      "options": { "cwd": "${workspaceFolder}" }
    }
  ]
}
